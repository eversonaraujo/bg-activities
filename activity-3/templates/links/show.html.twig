{% extends 'base.html.twig' %}

{% block title %}Links{% endblock %}

{% block body %}
    <h1>Links</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ link.url }}</td>
            </tr>
            <tr>
                <th>Shortlink</th>
                <td>{{ link.shortlink }}</td>
            </tr>
            <tr>
                <th>Visits</th>
                <td>{{ link.visits }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ link.createdAt ? link.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('links_index') }}">back to list</a>

    <a href="{{ path('links_edit', {'id': link.id}) }}">edit</a>

    {{ include('links/_delete_form.html.twig') }}
{% endblock %}
